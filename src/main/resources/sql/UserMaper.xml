<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.teamboard.dao.UserDao">

  <resultMap type="User" id="userMap">
    <id column="board_no" property="memberNo"/>
    <result column="title" property="userID"/>
    <result column="descripition" property="password"/>
    <result column="user_no" property="department"/>
    <result column="board_type" property="position"/>
    <result column="category" property="name"/>
    <result column="date" property="admin"/>
    <result column="date" property="permission"/>
  </resultMap>
  
  <insert id="signUpUser" parameterType="Board">
		insert into board(title, descripition, userNo, boardType, category, date)
		values(#{title}, #{descripition}, #{user_no}, #{board_type}, #{category}, now())
  </insert>

  <delete id="unRegistUser" parameterType="int">
		delete from Board
		where board_no=#{value}
  </delete>
  
  <select id="findOnebyUserNo" resultMap="boardMap" parameterType="int">
    select board_no,title,descripition,user_no,board_type,category, date
		from board
		where board_no = #{value}
  </select>
  
  <select id="findOnebyID" resultMap="boardMap" parameterType="String">
    select board_no,title,descripition,user_no,board_type,category, date
		from board
  </select>
	
  <select id="findAll" resultMap="boardMap">
    select board_no,title,descripition,user_no,board_type,category, date
		from board
		where board_type = #{value}
  </select>
  
</mapper>